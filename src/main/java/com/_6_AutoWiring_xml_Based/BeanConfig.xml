  <bean id="dedication2"
		class="com._6_AutoWiring_xml_Based.Dedication">
		<property name="Hardwork" value="countLess" />
		<property name="continuity" value="Regular" />
		<property name="Sometimeluck" value="once" />
		
	</bean>

 -->	
<!--  <bean class="com._6_AutoWiring_xml_Based.Success" name="success" autowire="byType"  /> -->


<!-- 
	3. constructor Similar to byType, but type applies to constructor arguments. 
	If there is not exactly one bean of the constructor argument type in the container, a fatal error is raised.
	
  -->

<!--  <bean class="com._6_AutoWiring_xml_Based.Success" name="success" autowire="constructor"  /> -->

</beans>

