<?xml version="1.0" encoding="UTF-8"?>


<!--XML Namespace and Schema Definitions: xmlns="http://www.springframework.org/schema/beans": 
	This declares the default namespace for the XML file, specifying that the 
	elements without a namespace prefix are part of the Spring Beans namespace. 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance": This declares the 
	XML Schema Instance namespace. xmlns:p="http://www.springframework.org/schema/p": 
	This declares a custom namespace prefix (p) for the "p" namespace. It's used 
	for concise property-based element configuration. xsi:schemaLocation: This 
	attribute specifies the location of the XML Schema Definitions (XSD) for 
	the declared namespaces. It's a space-separated list of namespace-URL pairs. -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd

">

	<!-- Injection of Collection -->

	<bean id="javaCollection"
		class="com._2_Injecting_Collection.JavaCollection">
		
		
		 <!-- results in a setAddressList(java.util.List) call -->
      <property name = "addressList">
         <list>
            <value>INDIA</value>
            <value>Pakistan</value>
            <value>USA</value>
            <value>China</value>
         </list>
      </property>
      
      
      
      <!-- results in a setAddressSet(java.util.Set) call -->
      <property name = "addressSet">
         <set>
            <value>Afghanistan</value>
            <value>Algeria</value>
            <value>Argentina</value>
            <value>Australia</value>
         </set>
      </property>



      <!-- results in a setAddressMap(java.util.Map) call -->
      <property name = "addressMap">
         <map>
            <entry key = "1" value = "Malaysia"/>
            <entry key = "2" value = "Maldives"/>
            <entry key = "3" value = "Mali"/>
            <entry key = "4" value = "Mexico"/>
         </map>
      </property>
      
      
      
      
      
      <!-- results in a setAddressProp(java.util.Properties) call -->
      <property name = "addressProp">
         <props>
            <prop key = "one">INDIA</prop>
            <prop key = "one">SA</prop>
            <prop key = "two">Pakistan</prop>
            <prop key = "three">England</prop>
            <prop key = "four">Newland</prop>
         </props>
      </property>
   </bean>
      
      

</beans>

